
<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>

    <%= f.label :icon %>
    <i class="fas fa-glass-cheers fa-2x"></i><%= f.radio_button :icon ,"fa-glass-cheers"%>
    <i class="fas fa-shopping-cart fa-2x"></i><%= f.radio_button :icon ,"fa-shopping-cart"%>
    <i class="fas fa-car fa-2x"></i><%= f.radio_button :icon ,"fa-car"%>
    <i class="fas fa-home fa-2x"></i><%= f.radio_button :icon ,"fa-home"%>
    <i class="fas fa-baby-carriage fa-2x"></i><%= f.radio_button :icon ,"fa-baby-carriage"%>
    <i class="fas fa-dog fa-2x"></i><%= f.radio_button :icon ,"fa-dog"%>
    <i class="fas fa-futbol fa-2x"></i><%= f.radio_button :icon ,"fa-futbol"%>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
