<div class="background-profile container-fluid pt-4 ">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <%= flash_messages %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label_html: { class: 'text-white h3' },
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                label_html: { class: 'text-white h3' },
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, 
    label_html: { class: 'text-white h6 pt-1' },
                as: :boolean if devise_mapping.rememberable?%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in",
                  class: 'btn btn-success btn-block' %>
  </div>
  <% end %>

  <div class="mt-2">
  <p class="text-white h5 text-center">If you aren't a user, sign up</p>
  <%= link_to "Sign up", new_user_registration_path, class:"btn btn-info btn-block" %>
  </div>

</div>
  
</div>


