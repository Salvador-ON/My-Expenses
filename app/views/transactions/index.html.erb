    <i class="fas fa-bars h3 text-white"></i>
    <span class="h1 text-white">Expense</span>
    <i class="fas fa-search h3 text-white"></i>
    </div>
  
  <div class="row d-flex justify-content-end align-items-center w-100 mx-auto">
    <div class="mt-4 col-4 d-flex justify-content-center align-items-center">
      <span class="h4 text-white text-center">Most Recent</span>
    </div>

    <div class="mt-4 col-4 d-flex justify-content-center align-items-center">
      <span class="h4 text-white text-center">Most Ancient</span>
    </div>
  </div>
  </div>


</div>

<div class="card mb-2 total-card-transaction mx-2">
  <div class="card-body d-flex justify-content-between">
    <span class="h5 text-muted m-0">Total Amount</span> <span class="h5 text-dark font-weight-bolder m-0"> $<%= @transaction_sum %></span>
    </div>
</div>

    <% @user_transactions.each do |transaction| %>

    <div class="card mb-3 card-transaction mx-auto">
        <div class="row">

          <div class="col-2 d-flex justify-content-center ">
            <i class="fas <%= transaction.icon %> fa-4x card-img align-self-center text-primary" ></i>
          </div>

          <div class="col-8 ">
            <div class="card-body">
            <div class= "d-flex justify-content-between w-75">
              <span class="card-title h4 text-capitalize text-muted"> <%= transaction.name %></span>
              <span class="card-text h4 text-capitalize text-muted"> Category: <%= transaction.gname %></span>
            </div>
              
            <div class="d-flex mt-4">
            <p class="card-text text-muted mb-0 h6">Date: <%= transaction.created_at.strftime('%d %b %Y') %></p>
            <%= link_to "Edit", "/transactions/#{transaction.id}/edit", class: "text-muted ml-4 h6" %>
            </div>
              
            </div>
          </div>

          <div class="col-2  d-flex justify-content-center">
              <span class="card-text h4 text-center mt-4 "> $<%= transaction.amount %></span>
            </div>

        </div>

      </div>
      
    <% end %>
 
 

