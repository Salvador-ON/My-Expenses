<div class="sticky-container">
<div class="group-spacer">
  </div>
  <%= flash_messages %>
<div class="card mb-2  mx-2">
  <div class="card-body d-flex justify-content-between">
    <span class="h5 text-muted m-0">Total Amount</span> <span class="h5 text-dark font-weight-bolder m-0"> $<%= @ext_transaction_sum %></span>
    </div>
</div>
    <% @ext_user_transaction.each do |transaction| %>

    <div class="card mb-3 card-transaction mx-auto">
        <div class="row no-gutters">

          

          <div class="col-10 ">
            <div class="card-body mx-0 px-3 py-2">
            <div class= " w-100 align-items-center">
              <span class="card-title h5 text-capitalize text-muted m-0"> <%= transaction.name %></span>
            </div>
              
            <div class="d-flex mt-1">
            <p class="card-text text-muted mb-0 h6 mr-4"><%= transaction.created_at.strftime('%d %b %Y') %></p>
            <%= link_to "Edit", "/transactions/#{transaction.id}/edit", class: "text-primary ml-4 mr-2 h6 font-weight-bold mb-0" %>

            <%= link_to 'Delete', transaction, method: :delete, data: {confirm: 'Are you sure?'}, class: "text-danger ml-4 h6 font-weight-bold" %>
            </div>
              
            </div>
          </div>

          <div class="col-2  d-flex justify-content-center pt-1">
              <span class="card-text h5 text-center mt-1 "> $<%= transaction.amount %></span>
            </div>

        </div>

      </div>
      
   <% end %>

    </div>

  <div class="container-fluid espace-button d-flex  align-items-center">
  
  </div>
 
