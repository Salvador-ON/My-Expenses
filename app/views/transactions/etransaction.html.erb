<h1>External Transaction</h1>

<div class="card">
  <div class="card-body">
    <span>Total Amount</span> <span> <%= @ext_transaction_sum %></span>
  </div>
</div>

 <% @ext_user_transaction.each do |transaction| %>
 <div class="card" style="width: 20rem;">
  <div class="card-body">
    <h5 class="card-title"><%= transaction.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"> Spent by:<%= transaction.uname %></h6>
    <p class="card-text">Amount:<%= transaction.amount %></p>
    <p class="card-text">Date: <%= transaction.created_at.strftime('%d %b %Y') %></p>
    <%= link_to "Edit", "/transactions/#{transaction.id}/edit" %>
  </div>
</div>

    
    <% end %>
 

<%= link_to 'New Transaction', new_transaction_path %>